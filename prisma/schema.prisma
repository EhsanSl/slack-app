// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Contact{
  fields String[]
  fieldCategory String?
  create Boolean? @default(false)
}
type List{
  enabled Boolean? @default(false)
}

type Event{
  enabled Boolean? @default(false)
}

type TicketCreationSettings{
  enabled Boolean? @default(false)
}

type FederatedSearchSettings{
  enabled Boolean? @default(false)
}

model NetworkSettings{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  
  createdAt  DateTime?   @default(now())
  updatedAt DateTime? @updatedAt
  
  networkId String @unique
  memberId String

  userId String
  token String
  refresh String
  domain String
  hubId String

  contactsSettings Contact?
  eventsSettings Event?
  listsSettings List?
  ticketCreationSettings TicketCreationSettings?
  federatedSearchSettings FederatedSearchSettings?

  @@map("hubspots")
}